<Window x:Class="TasksInWPF4_6_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TasksInWPF4_6_1"
        mc:Ignorable="d"
       Title="MainWindow" SizeToContent="WidthAndHeight">
    <StackPanel Orientation="Vertical">
        <TextBox Name="txtLogin" Width="150" Height="30" Margin="3" HorizontalAlignment="Left"></TextBox>
        <TextBox Name="txtPassword" Width="150" Height="30" HorizontalAlignment="Left" Margin="3"></TextBox>
        <Label Name="lblCounter" Width="250" Height="30" HorizontalAlignment="Left"/>
        <Button Content="OK" Name="okButton" Width="150" Height="40" Margin="3" HorizontalAlignment="Left"
                Click="Button_Click"></Button>
        <Button Content="OK2" Name="okButton2" Width="150" Height="40" Margin="3" HorizontalAlignment="Left"
                Click="okButton2_Click"></Button>
        <Label Name="lbl2" Content="string from https://www.microsoft.com/pl-pl/ down below:"/>
        <TextBlock Name="textBlockBig" Height="200" Width="400" ScrollViewer.CanContentScroll="True" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
